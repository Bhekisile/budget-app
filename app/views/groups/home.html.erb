<div class="mb-5">
  <div class="ml-5"><%= link_to "<i class='fas fa-angle-left'></i>".html_safe, home_groups_path, class: "back" %></div>
  <h4 class="text-center">Groups</h4>

  <div class="d-flex justify-content-between align-items-center">
    <%= form_for(current_user, url: destroy_user_session_path, method: :delete) do |f| %>
    <%= f.button type: :submit do %>
      <%= content_tag :i, "", class: "fa-solid fa-right-from-bracket" %>
    <% end %>
  <% end %>
  </div>

<% if @groups.empty? %>
    <p class="text-center pt-5">Sorry, you've not created any groups.</p>
  <% else %>
    <ul class="d-flex flex-column justify-content-center pt-5">
      <% @groups.each do |group| %>
        <%= link_to group_entities_path(group_id: group.id) do %>
          <li class="group-list-items d-flex justify-content-between align-items-center shadow p-3 my-3 bg-white">
            <div class="d-flex gap-3 align-items-center">
            <figure class="image">
              <img src="<%= group.icon %>" alt="user icon">
            </figure>
              <div class="h5 font-weight-bold"><%= group.name %></div>
            </div>
            <div class="h5 font-weight-bold">$ <%= format(group.entities.sum(:amount).to_s) %></div>
          </li>
        <% end %>
      <% end %>
    </ul>
  <% end %>

  <%= link_to "ADD NEW GROUP", new_group_path, class: 'btn text-white fixed-bottom w-100', style: 'background-color: #5fb523; padding: 1rem 0' %>
</div>
