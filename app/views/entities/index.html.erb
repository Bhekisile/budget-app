<% @title = "Entities" %>
<div class="header">
  <%= link_to "<i class='fas fa-angle-left'></i>".html_safe, home_groups_path, class: "back" %>
  <h1>Details</h1>
    <div class="d-flex justify-content-between align-items-center">
          <%= link_to groups_home_path do %>
            <i class="fas fa-arrow-left" style="color: white; font-size: 1.5rem;"></i>
          <% end %>
          <h4 class="" style="text-align: center; color: white;">
            <%= @title %>
          </h4>
          <p></p>
    </div>

<div class="mb-10">

  <% if @entities.empty?%>
    <p class="text-center pt-16 mb-10">Currently you don't have any entity</p>
  <% else %>
    <ul class="list-group mb-5 list-group-flush pt-12">
      <li class="list-group-item align-items-center gap-3 px-3 py-5 my-5 bg-white">
          <div class='d-flex justify-content-start align-items-center'>
            <figure class="image"><img class="rounded mx-auto d-block" src="<%= @group.icon %>" alt="user icon""></figure>
            <div class="text-lg opacity-75 font-bold text-uppercase"><%= @group.name %></div>
          </div>
          <hr>
          <div class="text-center d-flex mb-4 group-text">
              <div class="text-secondary font-dark-sm">TOTAL PAYMENT</div>
              <div class="font-extrabold text-3xl">$ <%= number_with_delimiter(@total) %></div>
          </div>
      </li>
      <% @entities.each do |entity| %>
        <li class="list-group-item d-flex align-items-center px-3 py-5 my-5 bg-white">
          <div class="d-flex justify-content-between align-items-center p-2">
              <span class="capitalize text-gray-500 font-semibold"><%= entity.name %> - </span>
              <span class="font-semibold text-lg"> $<%= number_with_delimiter(entity.amount)%></span>
          </div>
          <div class="d-flex justify-content-between align-items-center p-1">
              <span class="capitalize text-gray-300 font-light mb-3"><%= entity.created_at.strftime("%d %b, %y") %></span>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= link_to "ADD NEW ENTITY", new_group_entity_path(@group), class: 'fixed-bottom border border-white text-center text-white py-3 w-full', style: 'background-color: #5fb523; padding: 1rem 0' %>
</div>